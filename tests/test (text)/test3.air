/// aggregate test

declare aggregate @data{}

declare function $add(@vec3, @vec3) -> @vec3

define aggregate @vec3 {
    i32,
    i32,
    i32,
}

[entrypoint]
define function $main() -> i32 {
    %0 = alloc @vec3
    %1 = index %0, 0
    %2 = index %0, 1
    %3 = index %0, 2
    store %1, 0
    store %2, 0
    store %3, 0
    %4 = alloc @vec3
    %5 = index %0, 0
    %6 = index %0, 1
    %7 = index %0, 2
    store %5, 0
    store %6, 0
    store %7, 0
    %8 = call $add, %0, %4
}

define function $add(@vec3 %0, @vec3 %1) -> @vec3 {
    %3 = alloc @vec3
    %4 = index %0, 0
    %5 = index %1, 0
    %6 = load %4
    %7 = load %5
    %8 = index %3, 0
    %9 = add %6, %7
    store %8, %9
    %10 = index %0, 1
    %11 = index %1, 1
    %12 = load %10
    %13 = load %11
    %14 = index %3, 1
    %15 = add %12, %13
    store %14, %15
    %16 = index %0, 2
    %17 = index %1, 2
    %18 = load %16
    %19 = load %17
    %20 = index %3, 2
    %21 = add %18, %19
    store %20, %21
    ret %3
}